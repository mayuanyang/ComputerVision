@model ComputerVision.Mvc.Models.ImageClassifierModel
@{
    ViewBag.Title = "ResNet";
}



<div class="row">
    <div class="col-md-6">
        <h2>Getting started</h2>
        <p>
            Please upload a image
        </p>
        @using (Html.BeginForm("Upload", "ResNet", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="file" class="btn btn-default" />
            <input type="submit" name="Submit" id="Submit" value="Upload" class="btn btn-success" />

        }
        @if (Model != null)
        {
            <img src="@Model.ImageData" class="img-responsive" alt="Responsive image">
        }


    </div>
    <div class="col-md-6">
        <h2>Image Classifier</h2>
        @if (Model != null)
        {
            <p>Class:@Model.Category</p>
            <p>Description:@Model.Description</p>

            <table class="table">
                <tr>
                    <th>Class</th>
                    <th>Percentage</th>
                </tr>
                @foreach (var item in Model.Output)
                {
                    <tr>
                        <td>
                            <span>@item.Key</span>
                        </td>
                        <td>@item.Value</td>
                    </tr>
                }
            </table>
        }
    </div>
</div>